* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

a {
  color: inherit;
}

img,
video {
  display: block;
}

/* enable native smooth scrolling for anchor links */
html {
    scroll-behavior: smooth;
}

body {
    background-image: url('../img/grain-texture.png');
    background-size: auto;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center;
    color: white;
    font-family: Work Sans, sans-serif;
}

.hero-header {
    width: 100%;
    text-align: center;
    padding-top: 133px;
    padding-bottom: 40px;
}

.hero-text p {
    font-size: 16px;
    text-align: center; 
    font-style: normal;
    line-height: normal;
    letter-spacing: 0.8px;
    font-weight: 400;
    margin-bottom: 60px;
    text-transform: uppercase;
}



/* container for the logo that sits outside / overlapping the frame */
.logo-container {
    width: 480px;
    max-width: 90%;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.logo {
    position: relative;
    display: block;
        width: 95%;
        max-width: 640px;
    height: auto;
    object-fit: contain;
    z-index: 5;
}


}



.hero-nav {
    margin-top: 60px;
    display: flex;
    justify-content: center;
    gap: 13.5px;
    
}

.hero-nav a {
    color: white;
    font-weight: 700;
    font-size: 24px;
    transition: 0.3s ease;
    position: relative;
    padding: 6px;
    color: #FFF;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: 1.2px;
    text-transform: uppercase;
}

.hero-nav a:hover {
    color: #cfa767;
}

.hero-nav a:hover::after {
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background: #cfa767;
    box-shadow: 0 0 6px #cfa767;
}

.social-icons {
    display: flex;
    justify-content: center;
    gap: 9px;
    margin-top: 60px;
}

.social-icons img {
    width: 25px;
    opacity: 0.8;
    transition: 0.3s ease;
}

.social-icons img:hover {
    opacity: 1;
    filter: drop-shadow(0 0 4px #cfa767);
}



/* ===== Responsive tweaks ===== */
@media (max-width: 992px) {
    .logo-wrapper { width: 420px; height: 320px; }
    .logo-caption { font-size: 44px; letter-spacing: 6px; }
    .section-title { font-size: 48px; }
}

@media (max-width: 768px) {
    .logo-wrapper { width: 360px; height: 280px; }
    .logo-caption { font-size: 36px; }
    .artists-grid, .shop-grid { grid-template-columns: repeat(2, 1fr); }
    .hero-header { padding-top: 60px; }
}

@media (max-width: 480px) {
    .logo-wrapper { width: 260px; height: 200px; }
    .logo-caption { font-size: 22px; letter-spacing: 4px; bottom: 10px; }
    .hero-nav { gap: 8px; font-size: 12px; }
    .hero-nav a { padding: 2px 4px; }
    .artists-grid, .shop-grid { grid-template-columns: repeat(1, 1fr); gap: 18px; }
    .section-title { font-size: 40px; }
    .footer { padding: 40px; flex-direction: column; }
}





/* ===== ARTISTS SECTION ===== */

.artists-section {
    width: 100%;
    margin-top: 300px;
    padding: 0 80px;
    /* ensure anchor target sits slightly above to account for overlapping logo/header */
    scroll-margin-top: 10px;
}

.section-title {
    font-size: 64px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: 3.2px;
    margin-bottom: 60px;
}

.artists-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
}

.artist-card {
    text-align: center;
    cursor: pointer;
    transition: 0.3s;
    display: block;
    text-decoration: none;
    color: inherit;
}

.artist-card img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    filter: grayscale(100%);
    transition: 0.3s ease;
}

.artist-card p {
    margin-top: 10px;
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: 1px;
}

.artist-card:hover img {
    filter: grayscale(0%);
    transform: scale(1.02);
}




/* ===== SHOP ===== */

.shop-section {
    width: 100%;
    margin-top: 300px;
    padding: 0 80px;
}

.shop-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
}

.shop-item img {
    width: 100%;
    height: 300px;
    object-fit: cover;
}

.shop-item p {
    margin-top: 25px;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    letter-spacing: 0.55px;
}

.shop-item span {
    opacity: 0.7;
}

.pagination {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 20px;
    font-size: 20px;
    letter-spacing: 1px;
    opacity: 0.8;
}

.arrow {
    cursor: pointer;
}



/* ===== FOOTER ===== */

.footer {
    background: white;
    color: black;
    margin-top: 200px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    padding: 80px 70px 40px;
    display: flex;
    gap: 40px;
    align-items: flex-start;
}

.footer-left {
    width: 48%;
}

.footer-left img {
    width: 80px;
    margin-bottom: 20px;
}

.footer-left p {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    opacity: 0.85;
    margin-bottom: 18px;
}

.footer-right {
    width: 40%;
    text-align: right;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.footer-links {
    list-style: none;
    font-size: 16px;
    font-weight: 600;
    line-height: 2.2;
    opacity: 0.85;
    text-transform: uppercase;
}

.email-form {
    margin-top: 100px;
}

.email-form input {
    padding: 8px 12px;
    background: transparent;
    border: 1px solid black;
    color: black;
    font-size: 16px;
    font-weight: 400;
    width: 220px;
}

.email-form button {
    margin-left: 8px;
    font-size: 16px;
    background: black;
    color: white;
    padding: 8px 12px;
    border: none;
    font-weight: 700;
    cursor: pointer;
}

.footer-socials {
    display: flex;
    flex-direction: column;
    gap: 5px;
    align-items: flex-end;
}

.footer-socials img {
    width: 18px;
    opacity: 0.85;
}
.footer-socials img:hover {
    opacity: 1;
    filter: drop-shadow(0 0 4px black);
}

.footer-bottom {
    background: white;
    text-align: center;
    color: black;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    padding: 18px 0 40px;
}

.footer-bottom .copyright {
    font-size: 16px;
    font-weight: 600;
    font-style: normal;
    line-height: normal;
}


/* ===== GLOBAL RESPONSIVE RULES ===== */
@media (max-width: 1200px) {
    .hero-header { padding-top: 110px; }
    .logo-wrapper { width: 420px; height: 320px; }
    .logo-container { transform: translateY(-70px); }
    .hero-nav { gap: 14px; }
    .social-icons img { width: 20px; }
    .artists-grid, .shop-grid { gap: 24px; }
}

@media (max-width: 992px) {
    .hero-header { padding-top: 90px; }
    .logo-wrapper { width: 360px; height: 280px; }
    .logo-container { transform: translateY(-55px); }
    .logo { max-width: 520px; }
    .hero-nav {
        gap: 12px;
        font-size: 14px;
        flex-wrap: wrap;
        justify-content: center;
    }
    .artists-grid { grid-template-columns: repeat(3, 1fr); }
    .shop-grid { grid-template-columns: repeat(3, 1fr); }
    .artist-card img, .shop-item img { height: 320px; }
}

@media (max-width: 768px) {
    .hero-header { padding-top: 70px; }
    .hero-text p { font-size: 12px; margin-bottom: 28px; }
    .logo-wrapper { width: 320px; height: 240px; }
    .logo-container { transform: translateY(-42px); }
    .logo { width: 100%; max-width: 480px; }
    .hero-nav { gap: 10px; font-size: 13px; }
    .social-icons img { width: 16px; }
    .artists-grid, .shop-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .artists-section, .shop-section { padding: 0 24px; margin-top: 140px; }
    .section-title { font-size: 48px; }

    /* Footer responsive: stack columns and center content on tablet/mobile */
    .footer {
        flex-direction: column;
        align-items: center;
        gap: 24px;
        padding: 40px 24px;
    }

    .footer-left, .footer-right {
        width: 100%;
        text-align: center;
    }

    .footer-links {
        text-align: center;
    }

    .footer-socials {
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .hero-header { padding-top: 60px; }
    .hero-text p { font-size: 11px; margin-bottom: 20px; }
    .logo-wrapper { width: 260px; height: 180px; }
    .logo-container { transform: translateY(-30px); }
    .logo { max-width: 320px; }
    .hero-nav { gap: 8px; font-size: 12px; }
    .hero-nav a { padding: 2px 4px; }
    .social-icons img { width: 14px; }
    .artists-grid, .shop-grid { grid-template-columns: 1fr; gap: 18px; }
    .artist-card img, .shop-item img { height: 240px; }
    .section-title { font-size: 32px; margin-bottom: 28px; }
    .footer { padding: 24px 16px; }
    .footer-left p { font-size: 13px; }
    .footer-links { font-size: 13px; }
    .email-form input { width: 68%; }

    /* Extra small screens - artist page */
    .artist-bio p { font-size: 18px; padding: 0 12px; }
    .artist-bigtext { font-size: 12vw; }
    .artist-socials img { width: 14px; }
    .tickets-btn { font-size: 14px; padding: 6px 12px; }
}



